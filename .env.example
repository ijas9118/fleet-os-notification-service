# Application
NODE_ENV=development
PORT=3005
SERVICE_NAME=fleetos-notification-service
LOG_LEVEL=debug

# Database
# Format: mongodb://<username>:<password>@<host>:<port>/<database>?authSource=<auth_db>
DATABASE_URL=mongodb://<username>:<password>@<host>:<port>/<database>?authSource=<auth_db>

# Kafka Configuration
KAFKA_BROKER=kafka.infrastructure.svc.cluster.local:9092
KAFKA_GROUP_ID=notification-service-group

# Email Configuration (Gmail with App Password)
# Generate Gmail App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
EMAIL_FROM=FleetOS <noreply@fleetos.com>
